#include<iostream>
using namespace std;
int main(){
    cout<<"enter the size of array : ";
    int n;
    cin>>n;
    int numbers[n];
    cout<<"enter the values "<<endl;
    for(int i=0;i<n;i++){
        
        cin>>numbers[i];
        
    }
    int sum =0;
    for(int i=0;i<n;i++)
    {
        sum=(sum+numbers[i]);
        
       
    }
    cout<<"the sum is : ";
    cout<<sum<<endl;
    int avg=sum/n;
    cout<<"the avg is : ";
    cout<<avg;

    
    return 0;
}
